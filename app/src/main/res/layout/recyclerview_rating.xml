<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="Orientation">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvText"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5.0"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/tvRatingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="整個套餐非常豐富,湯頭好喝,肉新鮮"
            android:textColor="@color/colorMessageDetail"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/tvRatingMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="王小明"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvRatingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="2018-01-01"
            android:textSize="15sp" />

        <View
            android:id="@+id/ratingLineView"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorButton"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRatingReplayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="店家回應:"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRatingReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="謝謝您的肯定！"
            android:textColor="@color/colorMessageDetail"
            android:textSize="25dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etCommentReply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:gravity="top"
            android:hint="@string/hint_etCommentReply"
            android:padding="10dp"
            android:textSize="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="150dp">

            <Button
                android:id="@+id/btCommentDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/button_corners"
                android:text="@string/text_ComentDelete"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btCommentSave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_corners"
                android:text="@string/text_Save"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:visibility="gone" />


        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>