<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCheckWaiterOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石頭火鍋"
            android:textColor="#0000ff"
            android:textSize="25sp" />

            <TextView
                android:id="@+id/tvCheckWaiterTableName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="第八桌"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tvCheckWaiterOrderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvCheckWaiterTableName"
                android:layout_marginLeft="16dp"
                android:text="2"
                android:textSize="25sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f70202">

            <TextView
                android:id="@+id/tvCheckOrderWaiterConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="未出餐"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v7.widget.CardView>
