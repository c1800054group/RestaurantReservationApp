<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">


    <include layout="@layout/tool_bar_title"></include>


    <Button
        android:id="@+id/btOrder"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/tvMessageDetailＷarning"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@color/colorPrimary"
        android:text="領取優惠卷"
        android:textColor="@color/colorWhite" />


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvMessageDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:paddingTop="56dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/ivMessageDetail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_image" />


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@id/tvMessageDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/cvMessageDetail"
        android:layout_marginBottom="198dp"
        android:padding="16dp"
        android:text="母親節優惠活動"
        android:textColor="@color/colorName"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvMessageDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvMessageDetailTitle"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-198dp"
        android:paddingStart="8dp"
        android:text="優惠詳情"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvMessageDetailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvMessageDetail"
        android:layout_below="@id/tvMessageDetail"
        android:layout_marginBottom="147dp"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:text="來店打卡8折起"
        android:textColor="@color/colorMessageDetail"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvMessageDetailDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvMessageDetail"
        android:layout_below="@id/tvMessageDetail"
        android:paddingStart="8dp"
        android:paddingTop="55dp"
        android:text="可兌換日期時段"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvMessageDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvMessageDetail"
        android:layout_below="@id/tvMessageDetailDateTitle"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:text="2018/04/20 - 2018/05/20"
        android:textColor="@color/colorMessageDetail"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvMessageDetailＷarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/tvMessageDetail"

        android:layout_below="@id/tvMessageDetailDateTitle"

        android:paddingTop="50dp"
        android:text="@string/msg_MessageWarning"
        android:textColor="@color/colorWarning"
        android:textSize="20sp" />


</RelativeLayout>